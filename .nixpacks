# .nixpacks

build:
  # Tentukan langkah build aplikasi Anda
  commands:
    # Install Composer dependencies
    - composer install --optimize-autoloader --no-dev
    # Install NPM dependencies jika Anda menggunakan frontend (misalnya, Vue.js, React)
    - npm install
    # Build assets frontend (hanya jika ada frontend seperti Vue.js/React)
    - npm run production

run:
  # Tentukan perintah untuk menjalankan aplikasi
  command: php artisan serve --host=0.0.0.0 --port=$PORT
